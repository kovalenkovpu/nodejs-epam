{
  "name": "nodejs-epam",
  "version": "1.0.0",
  "author": "Pavel Kovalenkov",
  "description": "NodeJS GMP 2021",
  "main": "index.js",
  "engines": {
    "node": "14.16.0"
  },
  "scripts": {
    "start": "npm run db:migrate && npm run db:seed && node ./dist/src/index.js",
    "start:dev": "npm run db:migrate && npm run db:seed && nodemon ./src/index.ts",
    "build": "tsc --build",
    "heroku:promote": "git push heroku TASK5-loggin-and-error-handling:main",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all",
    "tslint": "tsc --noEmit",
    "lint": "eslint --ext .ts src --color",
    "lint:all": "npm run tslint & npm run lint"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.35",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "sequelize-cli": "^6.2.0",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "lodash": "^4.17.21",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.6.2",
    "uuid": "^8.3.2",
    "validator": "^13.5.2",
    "winston": "^3.3.3"
  }
}
